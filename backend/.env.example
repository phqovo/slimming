# MySQL配置
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=slimming_db

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_redis_password

# JWT配置
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# 短信配置（使用短信宝）
SMS_USERNAME=your_sms_username
SMS_PASSWORD=your_sms_password
SMS_SIGN=【体重管理】
SMS_DEBUG_MODE=True

# 应用配置
APP_HOST=0.0.0.0
APP_PORT=8000
DEBUG=True

# 文件上传配置
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760
STORAGE_TYPE=1  # 1=本地存储, 2=七牛云存储

# 七牛云配置（如果使用七牛云存储）
QINIU_ACCESS_KEY=your_qiniu_access_key
QINIU_SECRET_KEY=your_qiniu_secret_key
QINIU_BUCKET_NAME=your_bucket_name
QINIU_DOMAIN=https://your-domain.com

# OpenAI 配置（如果使用AI功能）
OPENAI_API_KEY=your_openai_api_key
OPENAI_BASE_URL=  # 留空则使用官方API(https://api.openai.com)，可自定义为代理地址

# Google Gemini 配置（AI 助手）
GEMINI_API_KEY=your_gemini_api_key
GEMINI_BASE_URL=  # 留空则使用官方API(https://generativelanguage.googleapis.com)，可自定义为代理地址

# OAuth配置（QQ和微信登录）
WECHAT_APP_ID=your_wechat_app_id
WECHAT_APP_SECRET=your_wechat_app_secret
QQ_APP_ID=your_qq_app_id
QQ_APP_KEY=your_qq_app_key
